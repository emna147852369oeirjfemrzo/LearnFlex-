
{% extends 'base.html.twig' %}

{% block title %}Ajouter un Examen{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}">
<link rel="stylesheet" href="{{ asset('assets/css/dashboard.css') }}">
<link rel="stylesheet" href="{{ asset('assets/css/crud.css') }}">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
{% endblock %}

{% block body %}
<div class="dashboard">

    {# ===== SIDEBAR ===== #}
    <aside class="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <img src="{{ asset('assets/images/logo1.png') }}" class="nav-logo">
                <span>LearnFlex</span><span class="highlight">+</span>
            </div>
        </div>

        <nav class="sidebar-menu">
            <ul>
                <li>
                    <a href="#">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                <li class="active has-submenu">
                    <a href="#">
                        <i class="fas fa-graduation-cap"></i>
                        <span>Evaluation</span>
                    </a>
                    <ul class="submenu">
                        <li>
                            <a href="{{ path('admin_examen') }}">Examen</a>
                        </li>
                        <li>
                            <a href="#">Challenge</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
    </aside>

    {# ===== MAIN CONTENT ===== #}
    <main class="main-content">

        {# ===== HEADER ===== #}
        <header class="dashboard-header">
            <div class="header-left">
               <h1>
    {{ isEdit ? 'Modifier un Examen' : 'Ajouter un Examen' }}
</h1>

<p>
    {{ isEdit ? 'Modification des informations de l’examen' : 'Création d’un nouvel examen' }}
</p>

            </div>
            <div class="header-right">
                <a href="{{ path('admin_examen') }}" class="btn secondary">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
            </div>
        </header>

        {# ===== FORM CARD ===== #}
        <div class="dashboard-content">
            <div class="crud-container">
                <div class="crud-header">
<h2>
    {{ isEdit ? 'Modifier l’examen' : 'Informations de l’examen' }}
</h2>
                </div>

                <div class="crud-body">
                    {{ form_start(form, {'attr': {'class': 'crud-form'}}) }}
                    {% if form.vars.submitted and not form.vars.valid %}
                    <div class="alert alert-danger" role="alert" style="margin-bottom: 1rem; padding: 1rem; border: 1px solid #dc3545; background: #f8d7da; color: #721c24; border-radius: 4px;">
                        <strong>Erreurs de saisie :</strong> Veuillez corriger les champs signalés en rouge ci-dessous.
                    </div>
                    {% endif %}
                    {{ form_errors(form) }}

                    <div class="form-grid">
                        {{ form_row(form.titre) }}

{{ form_row(form.description) }}

                        {{ form_row(form.matiere) }}
                        {{ form_row(form.niveauexamen) }}
                        {{ form_row(form.typeexamen) }}

                        {{ form_row(form.datedebut) }}
                        {{ form_row(form.datefin) }}
                        {{ form_row(form.duree) }}
                        {{ form_row(form.nbquestion) }}

                        {{ form_row(form.scoretotal) }}
                        {{ form_row(form.coefficient) }}
                        {{ form_row(form.etat) }}
                        {{ form_row(form.datecreation) }}
                        {{ form_row(form.pdfFile) }}
                    </div>

                    <div class="form-actions">
                       <button class="btn primary">
    <i class="fas fa-save"></i>
    {{ isEdit ? 'Modifier' : 'Enregistrer' }}
</button>


                        <a href="{{ path('admin_examen') }}" class="btn secondary">
                            Annuler
                        </a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>

    </main>
</div>
{% endblock %}
