{# templates/front/afficher.html.twig - Page /front/evenements #}

{% extends 'front/home.html.twig' %}

{% block title %}Orientation - Événements | Learnflexplus{% endblock %}


{% block header %}
<header class="landing-header">
    <div class="container">
        <div class="header-left">
            <div class="logo">
                {# Logo clickable for Admin and Enseignant only #}
                {% if app.user and ('ROLE_ADMIN' in app.user.roles or 'ROLE_ENSEIGNANT' in app.user.roles) %}
                    <a href="{{ path('dashboard') }}">
                        <img src="{{ asset('assets/images/logo1.png') }}" alt="LearnFlexPlus Logo" class="main-logo">
                        <span class="logo-text">LearnFlexPlus</span>
                    </a>
                {% else %}
                    <img src="{{ asset('assets/images/logo1.png') }}" alt="LearnFlexPlus Logo" class="main-logo">
                    <span class="logo-text">LearnFlexPlus</span>
                {% endif %}
            </div>
        </div>
        <nav class="main-nav">
            <ul>
                <li class="active"><a href="{{ path('app_front') }}">Accueil</a></li>
                <li><a href="#">Contenus pédagogiques</a></li>
                <li><a href="{{path('front_evaluation')}}">Evaluation</a></li>
                <li><a href="#">Questionnaire</a></li>
                <li><a href="{{ path('front_evenements') }}">Orientation</a></li>
                <li><a href="#">Forum </a></li>
            </ul>
        </nav>
        
       <div class="header-right">
            {# Dashboard button now optional, you can even remove it if logo is enough #}
            {% if app.user and ('ROLE_ADMIN' in app.user.roles or 'ROLE_ENSEIGNANT' in app.user.roles) %}
                <a href="{{ path('dashboard') }}" class="btn btn-outline dashboard-btn">Dashboard</a>
            {% endif %}

            {# Logout for logged-in users #}
            {% if app.user %}
                <form action="{{ path('app_logout') }}" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-primary logout-btn">Déconnexion</button>
                </form>
            {% else %}
                <a href="{{ path('app_login') }}" class="btn btn-primary">Connexion</a>
            {% endif %}

            <button class="mobile-menu-btn">
                <i class="fas fa-bars"></i>
            </button>
        </div>
    </div>
</header>
{% endblock %}

{% block body %}
<a href="{{ path('app_front') }}" style="display: inline-block; background: #e8f4fd; color: #0d6efd; padding: 6px 14px; border-radius: 20px; font-size: 0.9rem; font-weight: 600; margin: 20px 0 12px; margin-left: 20px; text-decoration: none;">
    <i class="fas fa-arrow-left"></i> Retour vers Accueil
</a>

<div class="orientation-page">
    <!-- Hero Section -->
    <section class="orientation-hero">
        <div class="hero-content text-center">
    <h1><i class="fas fa-compass"></i> Orientation - Événements & Formations</h1>
    <p class="lead">Découvrez nos événements et trouvez la formation qui vous correspond</p>

    <!-- Bouton Organismes -->
    <div style="margin-top: 25px;">
        <a href="{{ path('front_organismes') }}" class="btn btn-outline-light">
            <i class="fas fa-building"></i> Voir les organismes
        </a>
    </div>
</div>

    </section>

    <!-- Main Content -->
    <section class="orientation-content">
        <div class="container">
            <!-- Événements Grid -->
            <div class="events-grid">
                {% for evenement in evenements %}
                    <div class="event-card">
                        <div class="card-header">
                            <span class="status-badge {% if evenement.statut == 'Actif' %}active{% else %}inactive{% endif %}">
                                {{ evenement.statut }}
                            </span>
                            <span class="type-badge">{{ evenement.typeevenement }}</span>
                        </div>

                        <div class="card-body">
                            <h3 class="event-title">{{ evenement.titre }}</h3>
                            <p class="event-description">{{ evenement.description|slice(0, 120) }}...</p>

                            <div class="event-details-grid">
                                <div class="detail-item">
                                    <i class="fas fa-calendar-alt"></i>
                                    <span>{{ evenement.datedebut ? evenement.datedebut|date('d/m/Y') : '-' }}</span>
                                </div>
                                <div class="detail-item">
                                    <i class="fas fa-clock"></i>
                                    <span>{{ evenement.heuredebut ? evenement.heuredebut|date('H:i') : '-' }}</span>
                                </div>
                                <div class="detail-item">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span>{{ evenement.lieu }}</span>
                                </div>
                                <div class="detail-item">
                                    <i class="fas fa-users"></i>
                                    <span>{{ evenement.capacitemax }} places</span>
                                </div>
                            </div>

                            <div class="event-info">
                                <p><strong>Mode:</strong> <span class="mode-badge">{{ evenement.mode }}</span></p>
                                <p><strong>Public:</strong> {{ evenement.publiccible }}</p>
                                <p><strong>Domaines:</strong> {{ evenement.domainesconcernes }}</p>
                            </div>

                            <div class="event-organizer">
                                <i class="fas fa-building"></i>
                                <span>
                                    {% if evenement.organisme %}
                                        {{ evenement.organisme.nom }}
                                    {% else %}
                                        N/A
                                    {% endif %}
                                </span>
                            </div>
                        </div>

                        <div class="card-footer">
                            <a href="{{ path('evenement_inscription', { id: evenement.id }) }}" class="btn btn-primary btn-block">
                                <i class="fas fa-check-circle"></i> S'inscrire
                            </a>
                            <a href="{{ path('front_evenement_show', {'id': evenement.id}) }}" class="btn btn-outline btn-block">
                                <i class="fas fa-eye"></i> Voir détails
                            </a>
                        </div>
                    </div>
                {% else %}
                    <div class="no-events">
                        <i class="fas fa-inbox"></i>
                        <h2>Aucun événement disponible</h2>
                        <p>Consultez-nous plus tard pour de nouveaux événements</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
</div>

<style>
    /* Palette front : #0d6efd, #e8f4fd, #1a1a2e, #5a5a72 */
    .orientation-page {
        background: #f8f9fa;
        min-height: 100vh;
        padding-bottom: 50px;
    }

    .orientation-hero {
        background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
        color: white;
        padding: 80px 0;
        text-align: center;
        box-shadow: 0 10px 30px rgba(13, 110, 253, 0.2);
    }

    .orientation-hero h1 {
        font-size: 2.2rem;
        font-weight: 700;
        margin-bottom: 15px;
        color: white;
    }

    .orientation-hero .lead {
        font-size: 1.1rem;
        opacity: 0.95;
        margin: 0;
    }

    .btn-outline-light {
        border: 2px solid #fff;
        color: #fff;
        padding: 12px 22px;
        border-radius: 30px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .btn-outline-light:hover {
        background: white;
        color: #0d6efd;
    }

    .orientation-content {
        padding: 50px 0;
    }

    .events-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 28px;
        margin-top: 30px;
    }

    .event-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        transition: transform 0.2s, box-shadow 0.2s;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .event-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 28px rgba(0,0,0,0.12);
    }

    .event-card .card-header {
        background: linear-gradient(135deg, #e8f4fd 0%, #d4e8f7 100%);
        padding: 20px;
        position: relative;
        min-height: 60px;
    }

    .status-badge {
        display: inline-block;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        color: white;
    }

    .status-badge.active {
        background: #198754;
    }

    .status-badge.inactive {
        background: #dc3545;
    }

    .type-badge {
        display: inline-block;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        background: #0d6efd;
        color: white;
        margin-left: 10px;
    }

    .event-card .card-body {
        padding: 24px;
        flex: 1;
    }

    .event-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #1a1a2e;
        margin: 0 0 12px 0;
    }

    .event-description {
        color: #5a5a72;
        font-size: 0.95rem;
        line-height: 1.5;
        margin-bottom: 15px;
    }

    .event-details-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
        margin-bottom: 20px;
    }

    .detail-item {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.9rem;
        color: #5a5a72;
        padding: 8px;
        background: #f8f9fa;
        border-radius: 8px;
    }

    .detail-item i {
        color: #0d6efd;
        font-size: 14px;
    }

    .event-info {
        border-top: 1px solid #eee;
        padding-top: 15px;
        margin-bottom: 15px;
    }

    .event-info p {
        margin: 8px 0;
        font-size: 0.9rem;
    }

    .event-info strong {
        color: #1a1a2e;
    }

    .mode-badge {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 6px;
        background: #e8f4fd;
        color: #0d6efd;
        font-size: 12px;
        font-weight: 600;
    }

    .event-organizer {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 12px;
        background: #f8f9fa;
        border-radius: 8px;
        font-size: 0.9rem;
        color: #5a5a72;
        border-left: 3px solid #0d6efd;
    }

    .event-organizer i {
        color: #0d6efd;
    }

    .event-card .card-footer {
        padding: 15px 24px;
        border-top: 1px solid #eee;
        display: flex;
        gap: 10px;
    }

    .event-card .btn-block {
        flex: 1;
        padding: 10px 16px;
        border: none;
        border-radius: 8px;
        font-size: 0.9rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-align: center;
        text-decoration: none;
    }

    .event-card .btn-primary {
        background: #0d6efd;
        color: white;
    }

    .event-card .btn-primary:hover {
        background: #0a58ca;
    }

    .event-card .btn-outline {
        background: white;
        color: #0d6efd;
        border: 2px solid #0d6efd;
    }

    .event-card .btn-outline:hover {
        background: #e8f4fd;
    }

    .no-events {
        grid-column: 1 / -1;
        text-align: center;
        padding: 60px 20px;
    }

    .no-events i {
        font-size: 4rem;
        color: #5a5a72;
        opacity: 0.4;
        margin-bottom: 16px;
    }

    .no-events h2 {
        color: #1a1a2e;
        font-size: 1.5rem;
        margin-bottom: 10px;
    }

    .no-events p {
        color: #5a5a72;
        font-size: 1rem;
    }

    @media (max-width: 768px) {
        .events-grid {
            grid-template-columns: 1fr;
        }

        .orientation-hero h1 {
            font-size: 1.75rem;
        }

        .orientation-hero .lead {
            font-size: 1rem;
        }

        .event-details-grid {
            grid-template-columns: 1fr;
        }

        .event-card .card-footer {
            flex-direction: column;
        }
    }

    @media (max-width: 480px) {
        .orientation-hero {
            padding: 50px 0;
        }

        .orientation-hero h1 {
            font-size: 1.5rem;
        }
    }
</style>
{% endblock %}

