{% extends 'base.html.twig' %}

{% block title %}{{ title|default('Événements') }} - LearnFlex+{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
{% endblock %}


{% block body %}

<div class="container mt-5">
    <div class="page-header mb-5">
        <h1><i class="fas fa-calendar-alt"></i> {{ title|default('Événements disponibles') }}</h1>
        <p class="lead text-muted">Découvrez nos événements et formations</p>
    </div>
    
    <div class="row">
        {% for evenement in evenements %}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card event-card h-100 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">{{ evenement.titre }}</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text text-muted">{{ evenement.description|slice(0, 80) }}...</p>
                        
                        <div class="event-details mt-3">
                            <p><strong><i class="fas fa-calendar"></i></strong> {{ evenement.datedebut ? evenement.datedebut|date('d/m/Y') : '-' }}</p>
                            <p><strong><i class="fas fa-clock"></i></strong> {{ evenement.heuredebut ? evenement.heuredebut|date('H:i') : '-' }}</p>
                            <p><strong><i class="fas fa-map-marker-alt"></i></strong> {{ evenement.lieu }}</p>
                            <p><strong><i class="fas fa-users"></i></strong> Capacité: {{ evenement.capacitemax }}</p>
                        </div>
                    </div>
                    <div class="card-footer bg-light">
                        <a href="{{ path('etudiant_evenement_show', {'id': evenement.id}) }}" class="btn btn-sm btn-info">
                            <i class="fas fa-eye"></i> Voir détails
                        </a>
                        <a href="{{ path('app_inscription_form', {'id': evenement.id}) }}" class="btn btn-sm btn-success">
                            <i class="fas fa-check"></i> S'inscrire
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info text-center" role="alert">
                    <i class="fas fa-info-circle"></i> Aucun événement disponible pour le moment.
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<style>
    .page-header {
        border-bottom: 2px solid #007bff;
        padding-bottom: 20px;
    }

    .event-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        border-radius: 8px;
    }

    .event-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 20px rgba(0,0,0,0.15) !important;
    }

    .event-details {
        font-size: 14px;
        color: #666;
    }

    .event-details p {
        margin: 8px 0;
    }

    .card-header {
        border-radius: 8px 8px 0 0 !important;
    }

    .card-footer {
        display: flex;
        gap: 5px;
        border-top: 1px solid #dee2e6;
    }

    .btn-sm {
        padding: 5px 10px;
        font-size: 12px;
    }

    @media (max-width: 768px) {
        .col-md-6 { flex: 0 0 100%; }
    }
</style>

{% endblock %}
