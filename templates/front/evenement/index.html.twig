    padding: 10px 14px;
    background: rgba(151, 195, 162, 0.15);
    border-radius: 10px;
    font-size: 13px;
    color: #555;
    display: flex;
    align-items: center;
    gap: 10px;
}
.organisme-pill i {
    color: #1f4f65;
}

.card-footer-modern {
    padding: 18px 26px;
    border-top: 1px solid #f0f0f0;
    display: flex;
    gap: 12px;
}
.btn-tts-icon {
    width: 38px;
    height: 38px;
    border-radius: 999px;
    border: 2px solid #1f4f65;
    background: #fff;
    color: #1f4f65;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    position: absolute;
    top: 16px;
    right: 16px;
    transition: all 0.25s ease;
}
.btn-tts-icon:hover {
    background: #1f4f65;
    color: #fff;
    transform: translateY(-1px);
}
.btn-tts-icon.playing {
    background: #1f4f65;
    color: #fff;
}
.btn-modern {
    flex: 1;
    padding: 12px 18px;
    border-radius: 12px;
    font-size: 14px;
    font-weight: 600;
    text-align: center;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
}
.btn-details {
    background: white;
    color: #1f4f65;
    border: 2px solid #97c3a2;
}
.btn-details:hover {
    background: rgba(151, 195, 162, 0.15);
    transform: translateY(-2px);
}
.btn-inscription {
    background: linear-gradient(135deg, #97c3a2 0%, #1f4f65 100%);
    color: white;
    box-shadow: 0 4px 14px rgba(151, 195, 162, 0.4);
}
.btn-inscription:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(31, 79, 101, 0.3);
}
.btn-tts.loading {
    opacity: 0.7;
    cursor: wait;
}
.btn-disabled {
    background: #f0f0f0;
    color: #999;
    cursor: not-allowed;
}

.no-events-modern {
    grid-column: 1 / -1;
    text-align: center;
    padding: 80px 40px;
    background: white;
    border-radius: 20px;
    box-shadow: 0 4px 24px rgba(0,0,0,0.05);
    border: 2px dashed rgba(151, 195, 162, 0.4);
}
.no-events-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 24px;
    background: rgba(151, 195, 162, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.no-events-icon i {
    font-size: 36px;
    color: #1f4f65;
}
.no-events-modern h3 {
    font-size: 1.4rem;
    color: #1a1a2e;
    margin: 0 0 10px 0;
}
.no-events-modern p {
    color: #666;
    font-size: 1rem;
    margin: 0;
}

@media (max-width: 768px) {
    .events-grid {
        grid-template-columns: 1fr;
    }
    .event-index-hero h1 {
        font-size: 26px;
    }
    .detail-boxes-grid {
        grid-template-columns: 1fr;
    }
}
</style>

{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const ttsButtons = document.querySelectorAll('.btn-tts');
    const synth = window.speechSynthesis;
    let currentUtterance = null;

    ttsButtons.forEach(button => {
        button.addEventListener('click', function() {
            const text = this.getAttribute('data-text');
            const icon = this.querySelector('i');
            
            // If already speaking this button, toggle pause/resume or stop
            if (synth.speaking && currentUtterance && currentUtterance.button === this) {
                if (synth.paused) {
                    synth.resume();
                    icon.className = 'fas fa-pause';
                } else {
                    synth.pause();
                    icon.className = 'fas fa-volume-up';
                }
                return;
            }

            // Stop any current speech and reset all icons
            synth.cancel();
            ttsButtons.forEach(btn => btn.querySelector('i').className = 'fas fa-volume-up');

            const utterance = new SpeechSynthesisUtterance(text);
            utterance.lang = 'en-US'; // English (United States)
            utterance.button = this; // Attach button reference for tracking
            
            utterance.onstart = () => {
                icon.className = 'fas fa-pause';
                this.classList.add('playing');
            };

            utterance.onend = () => {
                icon.className = 'fas fa-volume-up';
                this.classList.remove('playing');
                currentUtterance = null;
            };

            utterance.onerror = (event) => {
                console.error('SpeechSynthesisUtterance error:', event);
                icon.className = 'fas fa-volume-up';
                this.classList.remove('playing');
                currentUtterance = null;
            };

            currentUtterance = utterance;
            synth.speak(utterance);
        });
    });
});
</script>
{% endblock %}
