        }

        fetch('/commentaire/add', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: new URLSearchParams({
                'comment': content,
                'examenId': '2'
            })
        })
        .then(response => response.json())
       .then(data => {
    if (data.success) {
        // Ajouter le commentaire dans la liste
