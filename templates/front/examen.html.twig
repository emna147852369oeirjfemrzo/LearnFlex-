    const viewsSpan = comment.querySelector('.views');
    let viewed = false; // pour √©viter plusieurs appels si la souris entre plusieurs fois

    comment.addEventListener('mouseenter', function() {
        if (viewed) return;
        viewed = true;

        const commentId = comment.querySelector('.like-btn')?.dataset.id;
        if (!commentId) return;

        fetch(`/commentaire/view/${commentId}`, {
            method: 'POST',
            headers: { 'X-Requested-With': 'XMLHttpRequest' }
        })
        .then(res => res.json())
