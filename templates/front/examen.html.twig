            })
            .then(res => res.json())
            .then(data => {
                likesSpan.textContent = "Likes : " + data.likes;
                btn.disabled = true;
                btn.textContent = "üëç Lik√©";
            })
            .catch(() => alert("Erreur lors du like"));
        });
    }
