<script>
document.addEventListener('DOMContentLoaded', function () {

    // ===== ELEMENTS =====
    const startBtn = document.getElementById('startExamBtn');
    const examContainer = document.getElementById('examContainer');
    const examLock = document.getElementById('examLock');
    const progressFill = document.getElementById('progressFill');
    const timerEl = document.getElementById('timer');
    const examForm = document.getElementById('examForm');
    const commentsDiv = document.getElementById('examComments');
    const addCommentForm = document.getElementById('addCommentForm');

    if (!startBtn || !examContainer || !examForm) return;

    // ===== VERIFICATION DATE =====
    const endDate = new Date("{{ examen.datefin|date('Y-m-d H:i:s') }}");
    const now = new Date();
    let isAccessible = now <= endDate;

    if (!isAccessible) {
        startBtn.disabled = true;
        examLock.textContent = "‚ùå L‚Äôexamen a expir√©.";
        examContainer.style.display = 'block';
        examForm.style.display = 'block';
        disableForm(examForm);
        commentsDiv.style.display = 'block';
    } else {
        examLock.textContent = "‚ñ∂ Cliquez sur ¬´ Commencer l‚Äôexamen ¬ª";
    }

    // ===== TIMER =====
    let totalTime = {{ examen.duree }} * 60; // secondes
    let elapsed = 0;
    let interval = null;

    startBtn.addEventListener('click', function () {
        examContainer.style.display = 'block';
        examForm.style.display = 'block';
        examLock.style.display = 'none';
        startBtn.disabled = true;

        interval = setInterval(function () {
            elapsed++;
            let minutes = Math.floor(elapsed / 60);
            let seconds = elapsed % 60;
            timerEl.textContent = String(minutes).padStart(2,'0') + ':' + String(seconds).padStart(2,'0');

            let progressPercent = Math.min(Math.floor((elapsed / totalTime) * 100), 100);
            progressFill.style.width = progressPercent + '%';
            progressFill.textContent = progressPercent + '%';

            if (elapsed >= totalTime || new Date() >= endDate) {
                finishExam("‚è∞ Temps √©coul√© !");
            }
        }, 1000);
    }, { once: true }); // √©vite double d√©clenchement si bouton cliqu√© plusieurs fois

    // ===== SUBMIT EXAM =====
    examForm.addEventListener('submit', function(e) {
        e.preventDefault();
        finishExam("‚úÖ Examen soumis avec succ√®s !");
    }, { once: true });

    function finishExam(message) {
        clearInterval(interval);
        disableForm(examForm);
        progressFill.style.width = '100%';
        progressFill.textContent = '100%';
        commentsDiv.style.display = 'block';
        examLock.textContent = message;
        examLock.style.display = 'block';
        alert(message);
    }

    function disableForm(form) {
        form.querySelectorAll('input, textarea, button, select').forEach(el => el.disabled = true);
    }

    // ===== FORMULAIRE COMMENTAIRES =====
  if (addCommentForm && !addCommentForm.dataset.listenerAttached) {
    addCommentForm.dataset.listenerAttached = "true";

    const commentList = document.getElementById('commentList');
    const commentInput = document.getElementById('comment');
    const charCount = document.getElementById('charCount');
    const submitBtn = addCommentForm.querySelector('button');

    function toggleButton() {
        submitBtn.disabled = !commentInput.value.trim();
        charCount.textContent = (500 - commentInput.value.length) + " caract√®res restants";
    }

    commentInput.addEventListener('input', toggleButton);
    toggleButton();

    addCommentForm.addEventListener('submit', function(e) {
        e.preventDefault();
        const text = commentInput.value.trim();
        if (!text) return;

        fetch('{{ path("commentaire_add") }}', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: new URLSearchParams({
                comment: text,
                examenId: "{{ examen.id }}"
            })
        })
        .then(res => res.json())
        .then(data => {
            if (!data.success) return alert(data.message || "Erreur lors de l'ajout du commentaire");

            const div = document.createElement('div');
            div.className = 'comment-block';
       div.innerHTML = `
    <div class="comment-header">
        <strong>${data.auteur}</strong>
        <span class="comment-date">${data.date}</span>
    </div>
    <p>${data.contenu}</p>
    <div class="comment-meta">
        <span class="views"><i class="fas fa-eye"></i> Vues : ${data.nbvue}</span> |
        <span class="likes"><i class="fas fa-thumbs-up"></i> Likes : ${data.likes}</span>
        <button class="like-btn btn btn-outline btn-sm" data-id="${data.id}">
            <i class="fas fa-thumbs-up"></i> Like
        </button>
        <button class="edit-btn btn btn-outline btn-sm" data-id="${data.id}">‚úèÔ∏è Modifier</button>
        <button class="delete-btn btn btn-outline btn-sm" data-id="${data.id}">üóëÔ∏è Supprimer</button>
    </div>
`;


            attachView(div);
            commentList.prepend(div);
            addCommentForm.reset();
            toggleButton();
        })
        .catch(() => alert("Erreur r√©seau, impossible d'ajouter le commentaire"));
    });
}

