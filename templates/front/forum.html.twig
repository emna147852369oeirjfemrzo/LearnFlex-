{% extends 'front/home.html.twig' %}

{% block title %}Forum - LearnFlex+{% endblock %}
{% block header %}
<header class="landing-header">
    <div class="container">
        <div class="header-left">
            <div class="logo">
                {# Logo clickable for Admin and Enseignant only #}
                {% if app.user and ('ROLE_ADMIN' in app.user.roles or 'ROLE_ENSEIGNANT' in app.user.roles) %}
                    <a href="{{ path('dashboard') }}">
                        <img src="{{ asset('assets/images/logo1.png') }}" alt="LearnFlexPlus Logo" class="main-logo">
                        <span class="logo-text">LearnFlexPlus</span>
                    </a>
                {% else %}
                    <img src="{{ asset('assets/images/logo1.png') }}" alt="LearnFlexPlus Logo" class="main-logo">
                    <span class="logo-text">LearnFlexPlus</span>
                {% endif %}
            </div>
        </div>
        <nav class="main-nav">
            <ul>
                <li class="active"><a href="{{ path('app_front') }}">Accueil</a></li>
                <li><a href="#">Contenus pédagogiques</a></li>
                <li><a href="{{path('front_evaluation')}}">Evaluation</a></li>
                <li><a href="#">Questionnaire</a></li>
                <li><a href="{{ path('front_evenements') }}">Orientation</a></li>
                <li><a href="#">Forum </a></li>
            </ul>
        </nav>
        
       <div class="header-right">
            {# Dashboard button now optional, you can even remove it if logo is enough #}
            {% if app.user and ('ROLE_ADMIN' in app.user.roles or 'ROLE_ENSEIGNANT' in app.user.roles) %}
                <a href="{{ path('dashboard') }}" class="btn btn-outline dashboard-btn">Dashboard</a>
            {% endif %}

            {# Logout for logged-in users #}
            {% if app.user %}
                <form action="{{ path('app_logout') }}" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-primary logout-btn">Déconnexion</button>
                </form>
            {% else %}
                <a href="{{ path('app_login') }}" class="btn btn-primary">Connexion</a>
            {% endif %}

            <button class="mobile-menu-btn">
                <i class="fas fa-bars"></i>
            </button>
        </div>
    </div>
</header>
{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-comments"></i> Forum de discussions</h1>
        <a href="{{ path('forum_publication_new') }}" class="btn btn-success">
            <i class="fas fa-plus"></i> Nouvelle publication
        </a>
    </div>

    <!-- Filtres -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="GET" class="row g-3">
                <div class="col-md-6">
                    <label for="filterCategorie" class="form-label">Catégorie</label>
                    <select id="filterCategorie" name="categorie" class="form-select">
                        <option value="">Toutes les catégories</option>
                        <option value="question_cours" {% if app.request.query.get('categorie') == 'question_cours' %}selected{% endif %}>Cours</option>
                        <option value="question_examen" {% if app.request.query.get('categorie') == 'question_examen' %}selected{% endif %}>Questions d'examen</option>
                        <option value="tutoriel" {% if app.request.query.get('categorie') == 'tutoriel' %}selected{% endif %}>Tutoriels</option>
                        <option value="blog" {% if app.request.query.get('categorie') == 'blog' %}selected{% endif %}>Blog</option>
                        <option value="article" {% if app.request.query.get('categorie') == 'article' %}selected{% endif %}>Articles</option>
                        <option value="reclamation" {% if app.request.query.get('categorie') == 'reclamation' %}selected{% endif %}>Réclamations</option>
                        <option value="demande_d_aide" {% if app.request.query.get('categorie') == 'demande_d_aide' %}selected{% endif %}>Demandes d'aide</option>
                        <option value="autre" {% if app.request.query.get('categorie') == 'autre' %}selected{% endif %}>Autre</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">&nbsp;</label>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-filter"></i> Filtrer
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        {% if publications|length > 0 %}
            {% for publication in publications %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm hover-shadow">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <span class="badge bg-primary">{{ publication.categorie|replace({'_': ' '})|title }}</span>
                                <small class="text-muted">
                                    <i class="far fa-clock"></i> 
                                    {{ publication.dateCreation|date('d/m/Y') }}
                                </small>
                            </div>
                            
                            <h5 class="card-title">
                                <a href="{{ path('forum_publication_show', {'id': publication.id}) }}" 
                                   class="text-decoration-none text-dark">
                                    {{ publication.titre|slice(0, 50) }}
                                    {% if publication.titre|length > 50 %}...{% endif %}
                                </a>
                            </h5>
                            
                            <p class="card-text text-muted">
                                {{ publication.description|slice(0, 100) }}
                                {% if publication.description|length > 100 %}...{% endif %}
                            </p>
                            
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <div class="text-muted small">
                                    <span class="me-3">
                                        <i class="fas fa-eye"></i> {{ publication.nombreVues }}
                                    </span>
                                    <span>
                                        <i class="fas fa-heart"></i> {{ publication.nombreLikes }}
                                    </span>
                                </div>
                                
                                <a href="{{ path('forum_publication_show', {'id': publication.id}) }}" 
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i> Voir
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="col-12">
                <div class="alert alert-info text-center py-5">
                    <i class="fas fa-comments fa-3x mb-3"></i>
                    <h3>Aucune publication pour le moment</h3>
                    <p class="mb-0">Soyez le premier à créer une discussion !</p>
                    <div class="mt-3">
                        <a href="{{ path('forum_publication_new') }}" class="btn btn-success">
                            <i class="fas fa-plus"></i> Créer la première publication
                        </a>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Appliquer les filtres depuis l'URL
    const urlParams = new URLSearchParams(window.location.search);
    
    if (urlParams.has('categorie')) {
        document.getElementById('filterCategorie').value = urlParams.get('categorie');
    }
    
    // Hover effect sur les cartes
    const cards = document.querySelectorAll('.card.hover-shadow');
    cards.forEach(card => {
        card.addEventListener('mouseenter', function() {
            this.classList.add('shadow');
        });
        card.addEventListener('mouseleave', function() {
            this.classList.remove('shadow');
        });
    });
});
</script>
{% endblock %}