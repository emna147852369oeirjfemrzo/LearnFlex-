{% extends 'front/home.html.twig' %}

{% block title %}Organismes - Learnflexplus{% endblock %}

{% block header %}
<header class="landing-header">
    <div class="container">
        <div class="header-left">
            <div class="logo">
                {# Logo clickable for Admin and Enseignant only #}
                {% if app.user and ('ROLE_ADMIN' in app.user.roles or 'ROLE_ENSEIGNANT' in app.user.roles) %}
                    <a href="{{ path('dashboard') }}">
                        <img src="{{ asset('assets/images/logo1.png') }}" alt="LearnFlexPlus Logo" class="main-logo">
                        <span class="logo-text">LearnFlexPlus</span>
                    </a>
                {% else %}
                    <img src="{{ asset('assets/images/logo1.png') }}" alt="LearnFlexPlus Logo" class="main-logo">
                    <span class="logo-text">LearnFlexPlus</span>
                {% endif %}
            </div>
        </div>
        <nav class="main-nav">
            <ul>
                <li class="active"><a href="{{ path('app_front') }}">Accueil</a></li>
                <li><a href="#">Contenus pédagogiques</a></li>
                <li><a href="{{path('front_evaluation')}}">Evaluation</a></li>
                <li><a href="#">Questionnaire</a></li>
                <li><a href="{{ path('front_evenements') }}">Orientation</a></li>
                <li><a href="#">Forum </a></li>
            </ul>
        </nav>
        
       <div class="header-right">
            {# Dashboard button now optional, you can even remove it if logo is enough #}
            {% if app.user and ('ROLE_ADMIN' in app.user.roles or 'ROLE_ENSEIGNANT' in app.user.roles) %}
                <a href="{{ path('dashboard') }}" class="btn btn-outline dashboard-btn">Dashboard</a>
            {% endif %}

            {# Logout for logged-in users #}
            {% if app.user %}
                <form action="{{ path('app_logout') }}" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-primary logout-btn">Déconnexion</button>
                </form>
            {% else %}
                <a href="{{ path('app_login') }}" class="btn btn-primary">Connexion</a>
            {% endif %}

            <button class="mobile-menu-btn">
                <i class="fas fa-bars"></i>
            </button>
        </div>
    </div>
</header>
{% endblock %}




{% block body %}
<a href="{{ path('app_front') }}" style="display: inline-block; background: #e8f4fd; color: #0d6efd; padding: 6px 14px; border-radius: 20px; font-size: 0.9rem; font-weight: 600; margin-bottom: 12px;">
    Retour vers Accueil
</a>

<main>
    <section class="organismes-section" style="padding: 60px 0 80px;">
        <div class="container" style="max-width: 1200px; margin: 0 auto; padding: 0 20px;">
            <div class="section-header" style="text-align: center; margin-bottom: 48px;">
                <span class="badge" style="display: inline-block; background: #e8f4fd; color: #0d6efd; padding: 6px 14px; border-radius: 20px; font-size: 0.9rem; font-weight: 600; margin-bottom: 12px;">Partenaires</span>
                <h1 style="font-size: 2.2rem; font-weight: 700; color: #1a1a2e; margin-bottom: 12px;">Organismes disponibles</h1>
                <p style="font-size: 1.1rem; color: #5a5a72; max-width: 600px; margin: 0 auto;">Découvrez les établissements et partenaires qui proposent formations et événements.</p>
            </div>

            <div class="organismes-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(320px, 1fr)); gap: 28px;">
                {% for organisme in organismes %}
                {% set siteUrl = organisme.siteweb and organisme.siteweb|trim != '' ? ((organisme.siteweb starts with 'http://') or (organisme.siteweb starts with 'https://') ? organisme.siteweb : 'https://' ~ organisme.siteweb) : null %}
                <article class="organisme-card" style="background: #fff; border-radius: 16px; overflow: hidden; box-shadow: 0 4px 20px rgba(0,0,0,0.08); transition: transform 0.2s, box-shadow 0.2s;">
                    <div style="text-decoration: none; color: inherit; display: block;">
                        <a href="{{ path('front_organisme_show', {'id': organisme.id}) }}" style="text-decoration: none; color: inherit; display: block;">
                        <div class="organisme-photo" style="aspect-ratio: 16/10; background: linear-gradient(135deg, #e8f4fd 0%, #d4e8f7 100%); display: flex; align-items: center; justify-content: center;">
                            {% if organisme.photo %}
                                <img src="{{ asset('uploads/organismes/' ~ organisme.photo) }}" alt="{{ organisme.nom }}" style="width: 100%; height: 100%; object-fit: cover;">
                            {% else %}
                                <div style="color: #5a5a72; font-size: 4rem; opacity: 0.5;"><i class="fas fa-building"></i></div>
                            {% endif %}
                        </div>
                        <div class="organisme-body" style="padding: 24px;">
                            <h3 style="font-size: 1.25rem; font-weight: 700; color: #1a1a2e; margin: 0 0 8px;">{{ organisme.nom }}</h3>
                            {% if organisme.typesponsor %}
                                <span style="display: inline-block; font-size: 0.8rem; color: #0d6efd; font-weight: 600; margin-bottom: 10px;">{{ organisme.typesponsor }}</span>
                            {% endif %}
                            {% if organisme.description %}
                                <p style="font-size: 0.95rem; color: #5a5a72; line-height: 1.5; margin: 0 0 12px; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden;">{{ organisme.description }}</p>
                            {% endif %}
                            {% if organisme.localisation %}
                                <p style="font-size: 0.9rem; color: #5a5a72; margin: 0; display: flex; align-items: center; gap: 6px;">
                                    <i class="fas fa-map-marker-alt" style="color: #0d6efd;"></i> {{ organisme.localisation }}
                                </p>
                            {% endif %}
                        </div>
                        </a>
                            {% if siteUrl %}
                            <div style="padding: 0 24px 24px;">
                                <a href="{{ siteUrl }}" target="_blank" rel="noopener noreferrer" class="btn-visiter-site" style="display: inline-flex; align-items: center; gap: 8px; font-size: 0.9rem; color: #0d6efd; font-weight: 600; text-decoration: none; padding: 8px 16px; background: #e8f4fd; border-radius: 8px; transition: all 0.2s;">
                                    <i class="fas fa-external-link-alt"></i> Visiter le site
                                </a>
                            </div>
                            {% endif %}
                    </div>
                </article>
                {% else %}
                <div style="grid-column: 1 / -1; text-align: center; padding: 60px 20px; color: #5a5a72;">
                    <i class="fas fa-inbox" style="font-size: 4rem; opacity: 0.4; margin-bottom: 16px;"></i>
                    <p style="font-size: 1.1rem;">Aucun organisme disponible pour le moment.</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
</main>

<style>
.organisme-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 28px rgba(0,0,0,0.12);
}
.btn-visiter-site:hover {
    background: #0d6efd !important;
    color: white !important;
}
</style>
{% endblock %}

